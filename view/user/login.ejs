                            <div style="height: 30px; padding-top: 4px" class="text-danger text-center mt-3">
                                <h6>
                                    <%= message %>
                                </h6>
                            </div>
                            <% } %>
                                <div id="errorpassword" class="ms-2 text-danger">
                                </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-50 rounded-pill">Login</button>
                    </div>
                </form>
                <p class="mt-3 text-center">
                    Don't have an account? <a href="/register" class="text-decoration-none">Sign up now</a>
                </p>
